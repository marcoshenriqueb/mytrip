darkcolor = rgb(17, 17, 17)
darkgraycolor = #111111
lightgraycolor = #666666
primarycolor = #25aae1
secondarycolor = #25aae1
filtercolor = rgba(43,73,103,0.4)
lightbg = #f7f7f7

*
    box-sizing: border-box

html, body
    margin: 0
    padding: 0
    width: 100%

body
    font-family: 'Raleway', sans-serif
    color: darkcolor

h1, h2, h3, h4, h5, h6
    font-family: 'Montserrat', sans-serif
    font-weight 400

a
    font-family: 'Montserrat', sans-serif
    color: darkcolor
    font-size: 12px
    text-transform: uppercase
    text-decoration none
    transition all 400ms ease
    &:hover, &:focus, &:active
        color: secondarycolor
    &.big
        font-size 16px
        
label
    margin-bottom 5px

.flex
    display: flex
    align-items: center
    &.start
        align-items: flex-start

.flex-column
    display: flex
    flex-direction: column
    align-items: center
    &.start
        align-items: flex-start

.wrap
    flex-wrap wrap

.min-full-size
    width: 100%
    height: 100%

.justify-center
    justify-content: center

.full-w
    width: 100%

.half-w
    width 100%

.full-h
    height: 100%

.bg-light
    background-color: lightbg

.text-center
    text-align center

.section-title_container
    min-height: 252px

.page-title
    margin-top 100px
    height 150px
    justify-content center
    padding 1rem
    .subtitle
        font-size 18px

.title
    font-size: 24px
    letter-spacing: 2px
    text-transform: uppercase
    &.big
        font-size: 30px
        letter-spacing: 5px

.subtitle
    font-size: 20px
    color: darkcolor
    letter-spacing: 1px
    line-height: 20px
    text-transform: uppercase

.dark-label
    font-family: 'Montserrat', sans-serif
    color: darkcolor
    font-size: 14px
    text-transform: uppercase
    &.big
        font-size 16px

.dark-text
    font-family: 'Montserrat', sans-serif
    color: darkcolor
    font-size: 14px
    font-weight 400
    text-transform: none

.light-label
    font-family: 'Montserrat', sans-serif
    color: white
    font-size: 14px
    text-transform: uppercase
    &.big
        font-size 16px

.light-text
    color: lightgraycolor
    font-weight: 300
    font-size: 14px
    line-height: 26px

.detail-text
    font-size 14px
    margin-bottom 5px

.testimonial
    color: lightgraycolor
    font-size: 16px
    font-style italic
    line-height 22px
    &:before, &:after
        content '"'

.dark
    color: darkcolor

.white
    color: white

.margin-b
    margin-bottom 18px

.triangles
    &:after, &:before
        content: ''
        display: block
        position: absolute
        left: 50%
        transform: translate(-50%,0)
        width: 0
        border-left: 55px solid transparent
        border-right: 55px solid transparent
        z-index: 100
        
    &:after
        bottom: 0
        border-bottom: 18px solid #fff
        border-top: 0
        
    &:before
        top: 0
        border-top: 18px solid #fff
        border-bottom: 0

.overlay
    position: absolute
    background: linear-gradient(180deg, rgba(0, 0, 0, .4), rgba(0, 0, 0, .4))
    height: 100%

.body-overlay
    position fixed
    height 100vh
    background-color rgba(0, 0, 0, .9)
    z-index 10000
    display flex
    align-items center
    justify-content center
    span
        position absolute
        top 0
        right 0
        color white
        margin 2rem
        cursor pointer

.body-overlay, .overlay
    width: 100%
    top: 0
    left: 0

.w-900
    width 100%

.max-w-900
    max-width 900px
    

@media(min-width:768px)
    .page-title
        justify-content flex-start
        padding 4rem
    
    .title
        font-size: 32px
        &.big
            font-size: 45px
    .pad
        padding-left 2rem
        padding-right 2rem

    .half-w
        width 48%

@media(min-width:900px)
    .w-900
        width 900px

@import './home/form'
@import './home/header'
@import './home/top'
@import './home/description'
@import './home/services'
@import './home/clients'
@import './home/corporate'
@import './footer'
@import './service'

.newsletter-container
    padding 5rem 2rem
    flex-wrap wrap
    
    input
        width 100%
        margin 1rem 1rem
    
@media(min-width 768px)
    .newsletter-container
        input
            width 300px
