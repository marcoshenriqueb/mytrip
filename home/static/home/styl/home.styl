darkcolor = rgb(17, 17, 17)
darkgraycolor = #111111
lightgraycolor = rgb(136, 136, 136)
primarycolor = #59d7c5
secondarycolor = #59d7c5
filtercolor = rgba(43,73,103,0.4)
lightbg = #f7f7f7

*
    box-sizing: border-box

html, body
    margin: 0
    padding: 0
    width: 100%

body
    font-family: 'Raleway', sans-serif
    color: darkcolor

h1, h2, h3, h4, h5, h6
    font-family: 'Montserrat', sans-serif
    font-weight 400

.flex
    display: flex
    align-items: center
    &.start
        align-items: flex-start

.flex-column
    display: flex
    flex-direction: column
    align-items: center
    &.start
        align-items: flex-start

.min-full-size
    width: 100%
    height: 100%

.justify-center
    justify-content: center

.full-w
    width: 100%

.full-h
    height: 100%

.bg-light
    background-color: lightbg

.text-center
    text-align center

.section-title_container
    height: 252px

.title
    font-size: 24px
    letter-spacing: 2px
    text-transform: uppercase
    &.big
        font-size: 30px
        letter-spacing: 5px

.subtitle
    font-size: 20px
    color: darkcolor
    letter-spacing: 1px
    line-height: 20px
    text-transform: uppercase

.dark-label
    font-family: 'Montserrat', sans-serif
    color: darkcolor
    font-size: 14px
    text-transform: uppercase

.light-text
    color: lightgraycolor
    font-weight: 300
    font-size: 14px
    line-height: 26px

.detail-text
    font-size 14px
    margin-bottom 5px

.testimonial
    color: lightgraycolor
    font-size: 18px
    font-style italic
    line-height 22px
    &:before, &:after
        content '"'

.dark
    color: darkcolor

.white
    color: white

.triangles
    &:after, &:before
        content: ''
        display: block
        position: absolute
        left: 50%
        transform: translate(-50%,0)
        width: 0
        border-left: 55px solid transparent
        border-right: 55px solid transparent
        z-index: 100
        
    &:after
        bottom: 0
        border-bottom: 18px solid #fff
        border-top: 0
        
    &:before
        top: 0
        border-top: 18px solid #fff
        border-bottom: 0

.overlay
    background: linear-gradient(180deg, filtercolor, filtercolor)
    height: 100%
    width: 100%
    position: absolute
    top: 0
    left: 0

@media(min-width:768px)
    .title
        font-size: 32px
        &.big
            font-size: 45px


@import './home/form'
@import './home/header'
@import './home/top'
@import './home/description'
@import './home/services'
@import './home/project'
@import './home/clients'
@import './home/contact'
@import './footer'

.projects-title
    height 150px
    justify-content center
    padding 1rem
    .subtitle
        font-size 18px

.projects-content
    padding 2rem 1rem

.projects-content_cat
    flex-wrap wrap
    .o-button
        margin 0 5px

.projects-content_item
    margin-bottom 20px
    overflow hidden
    img
        width auto
        height 100%

@media(min-width 768px)
    .projects-title
        justify-content flex-start
        padding 4rem
        
    .projects-content
        padding 2rem 4rem

