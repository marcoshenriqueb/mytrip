darkcolor = rgb(17, 17, 17)
darkgraycolor = #111111
lightgraycolor = rgb(136, 136, 136)
primarycolor = #59d7c5
secondarycolor = #59d7c5
filtercolor = rgba(43,73,103,0.4)
lightbg = #f7f7f7

*
    box-sizing: border-box

html, body
    margin: 0
    padding: 0
    width: 100%

body
    font-family: 'Raleway', sans-serif
    color: darkcolor

.flex
    display: flex
    align-items: center

.flex-column
    display: flex
    flex-direction: column
    align-items: center
    &.start
        align-items: flex-start

.min-full-size
    width: 100%
    height: 100%

.justify-center
    justify-content: center

.full-w
    width: 100%

.full-h
    height: 100%

.bg-light
    background-color: lightbg

.section-title_container
    height: 252px

.title
    font-size: 32px
    letter-spacing: 2px
    text-transform: uppercase
    &.big
        font-size: 45px
        letter-spacing: 5px

.subtitle
    font-size: 20px
    color: darkcolor
    letter-spacing: 1px
    line-height: 20px
    text-transform: uppercase

.dark-label
    color: darkcolor
    font-size: 14px
    text-transform: uppercase

.light-text
    color: lightgraycolor
    font-weight: 300
    font-size: 14px
    line-height: 26px
    
.dark
    color: darkcolor

.white
    color: white

.triangles
    &:after, &:before
        content: ''
        display: block
        position: absolute
        left: 50%
        transform: translate(-50%,0)
        width: 0
        border-left: 55px solid transparent
        border-right: 55px solid transparent
        z-index: 100
        
    &:after
        bottom: 0
        border-bottom: 18px solid #fff
        border-top: 0
        
    &:before
        top: 0
        border-top: 18px solid #fff
        border-bottom: 0

.overlay
    background: linear-gradient(180deg, filtercolor, filtercolor)
    height: 100%
    width: 100%
    position: absolute
    top: 0
    left: 0

@import './home/header'
@import './home/top'
@import './home/description'
@import './home/services'

.img-container
    overflow: hidden

.project-container
    display: flex
    flex-direction: column
    img
        width: 100%

.project_big, .project_small
    width: 100%

.project_description
    padding: 3rem

@media(min-width: 868px)
    .project-container
        flex-direction: row
        
        &:nth-child(2n)
            >*:nth-child(2)
                order: -1
    
    .project_big
        width: 66%

    .project_small
        width: 34%
        &>*
            height: 50%            
        