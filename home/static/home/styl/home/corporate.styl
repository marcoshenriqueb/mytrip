.corporate-page-top
    margin-top 100px
    height 400px
    position relative
    background-image url('/static/img/corporate_1.jpg')
    background-position center 30%
    background-size cover

.contact-container
    flex-wrap: wrap
    padding 4rem 0
    
.contact-info, .contact-form
    padding: 2rem

.contact-form
    input, textarea
        width 100%

.half-form_container
    justify-content space-between
    flex-wrap wrap
    
.contact-info_icons
    .icon-button
        margin-right 20px  

.corporate-button
    margin 2rem 0
    &:hover, &:active, &:focus
        color white

@media(min-width:768px)

    .contact-info
        width: 40%

    .contact-form
        input, textarea
            &.half-form
                width 48%
