topfiltercolor = rgba(0, 0, 0, .3)

.top
    margin-top 100px
    background-image: linear-gradient(180deg, filtercolor, filtercolor), url('/static/img/top.jpg');
    background-size: cover
    background-position center center
    position: relative
    height: calc(100vh - 100px)
    overflow: hidden
    color: white
    
    .title
        margin-bottom .5rem

    .subtitle, .title
        color: white
        font-weight bold

    .subtitle
        font-size 1rem
        margin-bottom 4rem
        text-transform none
        font-weight 400

.top-icons
    margin-bottom 1rem
    .o-icon-button
        margin 0 .5rem

.video-container
    display: none

@media(min-width:768px)
    .top
        background-image: none

    .video-container
        position: absolute
        display: block
        left: 0
        top: 0
        width: 100%
        z-index: -100
        overflow: hidden

        .filter
            z-index: 100
            position: absolute
            background: topfiltercolor
            width: 100%
            height: 100%

        video
            z-index: 0
            width: 100%
            height: 100%
            min-height: 100%
