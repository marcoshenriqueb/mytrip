.header
    width: 100%
    height: 100px
    background-color: white
    overflow: hidden
    transition: height 300ms ease
    &.active
        height: 200px

.header-content
    justify-content: space-between
    padding-right: 20px
    height: 100px
    width: 100%

.header-logo
    img
        height: 80px

.header-nav
    &>.fa
        font-size: 24px
        cursor: pointer

.header-nav_mobile-items
    width: 100%
    list-style: none

.header-nav_items
    display: none

@media(min-width: 768px)
    .header
        &.active
            height: 100px
    .header-nav_mobile-items
        display: none

    #mobile-menu
        display: none

    .header-nav_items
        display: flex
        list-style: none